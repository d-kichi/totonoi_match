<h1>サウナ診断</h1>
<%= form_with url: diagnoses_path, method: :post do %>
  <% @questions.each do |question| %>
    <div class="question-block">
      <p><strong><%= question.content %></strong></p>
      <% question.answers.each do |answer| %>
        <div>
          <%= radio_button_tag "answer_ids[#{question.id}]", answer.id %>
          <%= label_tag "answer_ids_#{question.id}_#{answer.id}", answer.content %>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= submit_tag "診断結果を見る", class: "btn btn-primary" %>
<% end %>
